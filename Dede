  <script>
    // 1) trik ngrok skip header: lakukan fetch sekali ke halaman dengan header
    //    (ini bisa membantu bypass warning dalam beberapa kasus)
    (function trySkipNgrok(){
      try {
        fetch(window.location.href, {
          method: "GET",
          headers: { "ngrok-skip-browser-warning": "true" }
        }).catch(()=>{/* ignore */});
      } catch(e){ /* ignore */ }
    })();

    // 2) buat konfeti secara dinamis (murni visual)
    (function makeConfetti(){
      const colors = ['#ff9aa2','#ffd27a','#9be7ff','#c7f9c3','#d8b4ff','#ffd6e0'];
      const container = document.getElementById('confetti');
      const COUNT = 24;
      for(let i=0;i<COUNT;i++){
        const s = document.createElement('span');
        s.style.setProperty('--c', colors[i % colors.length]);
        s.style.background = colors[i % colors.length];
        s.style.left = Math.random()*100 + '%';
        s.style.top = (Math.random()*-40) + '%';
        s.style.width = (6 + Math.random()*10) + 'px';
        s.style.height = (8 + Math.random()*12) + 'px';
        s.style.opacity = 0.95;
        s.style.animationDuration = (3.6 + Math.random()*3) + 's';
        s.style.animationDelay = (Math.random()*4) + 's';
        container.appendChild(s);
      }
    })();

    // 3) kalau mau suara (opsional), tidak otomatis dimainkan agar tidak mengganggu
    //    Uncomment dan ganti src jika kamu punya file suara pendek
    /*
    const audio = new Audio('selamat.mp3');
    document.addEventListener('click', ()=> audio.play(), { once:true });
    */

    // 4) catatan: ganti nomor wa/tel pada link bila perlu
  </script>
